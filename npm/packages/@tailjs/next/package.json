{
  "name": "@tailjs/next",
  "description": "tail.js NextJS integration.",
  "license": "LGPL3",
  "scripts": {
    "check": "tsc --noEmit",
    "build": "tsx ../../../build/rollup.ts",
    "build:watch": "pnpm run build -w",
    "dist": "tsx ../../../build/publish.ts",
    "dist:dry": "pnpm run dist --dry"
  },
  "dependencies": {
    "@tailjs/client": "workspace:*",
    "@tailjs/engine": "workspace:*",
    "@tailjs/node": "workspace:*",
    "@tailjs/react": "workspace:*"
  },
  "devDependencies": {
    "@types/node": ">=20",
    "@types/react": "18.3.0",
    "@types/react-dom": "18.3.1",
    "next": "14.2.24"
  },
  "bin": {
    "tailjs-init-next": "./dist/cli/tailjs-init-next.cjs"
  },
  "publishConfig": {
    "directory": "dist"
  },
  "peerDependencies": {
    "next": ">=14.2.0",
    "react": ">=18.3.1"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server/index.d.ts",
        "default": "./dist/server/index.mjs"
      },
      "require": {
        "types": "./dist/server/index.d.ts",
        "default": "./dist/server/index.cjs"
      }
    }
  }
}